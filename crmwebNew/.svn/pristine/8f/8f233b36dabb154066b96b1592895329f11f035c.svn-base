.body-padding-top {
    min-width:1800px;
    overflow-x:auto;
}
.title {
    padding-bottom:10px;
}
.title span {
    color:rgb(160, 160, 160);
}
// .wrap{
//     min-width:1200px;
//     overflow-x:auto;
// }
.main {
    background-color:#fff;
    width:1100px;
    min-height:1000px; 
    float:left;
    position: relative;
    .icon_area {
    position: absolute;
    right:20px;
    top:20px;
    width:216px;
    height:25px;
    // background-color: red;
    span {
        display: inline-block;
        padding-right:8px;
        .goodImg {
            padding-right:5px;
        }
        .messageImg {
            padding-right:5px;
        }
    }
    }
    .mainWrap {
        padding:10px 20px 10px 20px;
    .questionText {
        padding-left:20px;
    .text {
        color:#345870;
        font-size:16px;
        font-weight:bold;
    }
    .infos,{
        padding:15px 0px 10px;
        .level{
            color:#999999;
            padding-right:100px;
        }
        .status {
             color:#999999;
        }
    }
    .classification{
         padding:5px 0px 5px;
         span {
             display:inline-block;
             margin-right:3px;
             width:50px;
             height:22px;
             text-align:center;
             line-height:22px;
             border-radius:12px;
             border: 1px solid #44cacb;
             background-color: #eeeeee;
         }
         .active {
             background-color:#44cacb;
             color:#fff;
         }
    }
    }
    .issueDesc{
        padding-left:20px;
        line-height: 20px;
        .classificationHistory {
           padding:10px 0px 10px;
           span {
             display:inline-block;
             margin-right:3px;
             width:50px;
             height:22px;
             text-align:center;
             line-height:22px;
             border-radius:12px;
             border: 1px solid #44cacb;
             background-color: #eeeeee; 
           }
        }
    }
    .instructions {
        border-bottom: 1px solid #eee;
        padding-bottom:10px;
        padding-left:20px;
        div {
            line-height: 20px;
        }
    }
    .btn-direction {
         padding-left:20px;
    }
    .btn-type {
         padding-left:45px;
    }
    .reply {
        padding-left:20px;
       
        .replyTip {
            color:#444;
            font-size:14px;
            font-weight:bold;
            padding:8px 0px;
        }
        .replyInfo {
             padding-bottom:8px;
           .replyUser {
               display: inline-block;
               padding-right:20px;
               color:#2f91d3;
                font-size:14px;
               font-weight:bold;

           } 
           .replyTime {
               color:#999;
           }
           img {
               float:right;
           }
        }
        .textareaFirst,.textareaSecond {
            padding: 10px;
            outline: none;
            resize: none;
            width: 1040px;
            border-radius: 4px 4px 4px 4px;
            border: solid 1px rgba(212, 222, 229, 1);
            height: 40px;
        }
        .dismissal {
            color:#444;
            font-size:14px;
            font-weight:bold;
            padding:10px 0px 5px;
        }
        .transfer {
            padding:20px 0 0 0;
            line-height:20px;
            .transferWhom {
                color:#444;
                font-size:14px;
                font-weight:bold;
                padding:8px 8px;    
            }
            img {
                padding-right:5px;
                vertical-align: middle;
            }
            .choose {
                color:#999;
            }
        }
        .buttons {
            padding-top:120px;
            text-align:center;
            span {
                width:100px;
                height:35px;
                color:#fff;
                font-size:14px;
            }
            .btn-next {
                background-color: #48a0dc;
            }
            .btn-sloved {
                 background-color: #31be91;
            }
            .btn-not{
                 background-color: #f16957;
            }
        }
    }
    }
}
.similar{
    padding:20px;
     background-color:#fff; 
     width:560px;
     min-height:1000px;
     float:left;
     margin-left:10px;
     div {
            padding-top:10px;
        }
    .tip {
        color:#48a0dc;
        font-size:14px;
    }
    .classification {
        padding:10px 0px 10px;
           span {
             display:inline-block;
             margin-right:3px;
             width:50px;
             height:22px;
             text-align:center;
             line-height:22px;
             border-radius:12px;
             border: 1px solid #44cacb;
             background-color: #eeeeee; 
           }
    }
}
.trail {
    width:110px;
    min-height:1000px;
    background-color:#dfe7ed;
    position: absolute;
    right: 100px;
    top: 40px;
    text-align:center;
    padding-top:20px;
    div {
	   font-size: 14px;
	   color: #48a0dc;
       line-height:40px;
    }
    p {
        margin:0 auto;
        width: 41px;
	    height: 41px;
        margin-bottom:40px;
        border-radius:50%;
        color:#fff;
        text-align: center;
        line-height: 41px;
	    background-color: rgba(72, 160, 220, 1);
    }
    p:nth-last-child(2),
    p:nth-last-child(1){
        background-color:#a9b8c2;
    }
}
