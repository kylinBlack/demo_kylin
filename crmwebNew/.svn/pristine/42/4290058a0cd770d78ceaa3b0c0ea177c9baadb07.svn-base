div.chooseLabelArea .newLabel{
    text-align: center;
    height: 27px;
    padding: 0 8px 0 8px;
    margin-right: 10px;
    display: inline-block;
    vertical-align: middle;
    position: relative;
    line-height: 27px;
    border: solid 1px #bfcfdb;
    border-radius: 15px 15px 15px 15px;
    margin-bottom: 5px;
}
p.textParagraph span{
    text-align: center;
    height: 27px;
    padding: 0 8px 0 8px;
    margin-right: 10px;
    display: inline-block;
    vertical-align: middle;
    position: relative;
    line-height: 27px;
    border: none;
    border-radius: 15px 15px 15px 15px;
    margin-bottom: 5px;
}

input:focus{outline: none;width: auto}

.chooseLabelArea{
    display: inline-block;
    width: 80%;
    padding: 10px;
    border: 2px solid #eee;
}
.pointer{cursor: pointer;}
.middle{ vertical-align: middle}
.label_input_selected{background: #56cadb;}
/*快速选择标签*/
.labelContent{
    width: 500px;
    height: 300px;
    border: 2px solid #DDDDDD;
    padding: 20px;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    margin: auto;
}