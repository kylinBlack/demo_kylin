.modalHeaderColor{  background-color: #337ab7;  }
.textCenter{  text-align: center;  }
.textColor{color:#48a1dd }
.verticalTop{  vertical-align: top}

.labelContainer{
    padding-top: 10px;
}
.labelContainer input{
    text-align: center;
    height: 27px;
    width: 70px;
    padding: 0 8px 0 8px;
    margin-right: 10px;
    display: inline-block;
    vertical-align: middle;
    position: relative;
    line-height: 27px;
    border: solid 1px #bfcfdb;
    border-radius: 15px 15px 15px 15px;
    margin-bottom: 5px;
}

.showLable .label{
    text-align: center;
    height: 27px;
    width: 70px;
    padding: 0 8px 0 8px;
    margin-right: 10px;
    display: inline-block;
    vertical-align: middle;
    position: relative;
    line-height: 27px;
    border: solid 1px #5baa6c;
    border-radius: 15px 15px 15px 15px;
    margin-bottom: 5px;
}
